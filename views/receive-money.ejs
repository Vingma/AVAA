<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>PayHub — Add Funds</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 40px;
      background-color: #c9c9c9;
    }
    .transferences {
      max-width: 400px;
      margin: auto;
      padding: 20px;
      background-color: #ff8800be;
      border-radius: 15px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      text-align: center;
    }
    input, select {
      width: 80%;
      padding: 10px;
      margin: 10px 0;
      border: 1px solid #ccc;
      border-radius: 3px;
      box-sizing: border-box;
    }
    button {
      width: 30%;
      padding: 10px;
      background-color: #804809be;
      color: white;
      border: none;
      border-radius: 3px;
      cursor: pointer;
      margin-top: 10px;
    }
    button:hover {
      background-color: #633807;
    }
  </style>
</head>
<body>
  <div class="transferences">
    <h1>Add Funds to Committee</h1>

    <label for="recipientType">Recipient Type:</label><br>
    <select id="recipientType">
      <option value="resident">Resident</option>
      <option value="anonymous">Anonymous</option>
    </select><br>

    <div id="residentSelection">
      <select id="residentName">
        <option value="john">John Smith</option>
        <option value="mary">Mary Johnson</option>
        <option value="carlos">Carlos Ruiz</option>
      </select><br>
    </div>

    <input id="amount" type="number" placeholder="Amount" min="1"><br>
    <input id="reason" type="text" placeholder="Reason / Message (optional)"><br>
    <button id="addBTN">Add Funds</button>
    <button id="backBTN" onclick="goToMenu()">Back to Menu</button>
  </div>

  <script>
    const recipientTypeSelect = document.getElementById('recipientType');
    const residentDiv = document.getElementById('residentSelection');

    recipientTypeSelect.addEventListener('change', () => {
      if(recipientTypeSelect.value === 'resident') {
        residentDiv.style.display = 'block';
      } else {
        residentDiv.style.display = 'none';
      }
    });

    document.getElementById("addBTN").addEventListener("click", () => {
      const type = recipientTypeSelect.value;
      const name = type === 'resident' ? document.getElementById('residentName').value : 'Community Fund';
      const amount = parseFloat(document.getElementById('amount').value);
      const reason = document.getElementById('reason').value;

      if(isNaN(amount) || amount <= 0) {
        alert('Please enter a valid amount');
        return;
      }

      // Simulación de ingreso
      alert(`Payment added:\nRecipient Type: ${type}\nRecipient: ${name}\nAmount: $${amount}\nReason: ${reason}`);
    });

    function goToMenu() {
      window.location.href = '/menu';
    }
  </script>
</body>
</html>
